@model Maistanesys.Models.Item

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:black;">Kiekio pakeitimas</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <h1 style="color:black; font-size:120%;">Kiekis</h1>
                <input asp-for="Amount" value="įveskite kiekį" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
           <div class="form-group">
                <input type="submit" value="Pakeisti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atgal į krepšelį</a>
</div>

